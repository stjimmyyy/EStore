@model ContactViewModel

@{
    ViewData["Title"] = "Contact us";
}

<h2>@ViewData["Title"]</h2>

<div class="row justify-content-center">
    <div class="col-md-4 offset-4">
        <section>
            <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SenderEmail"></label>
                    <input asp-for="SenderEmail" class="form-control" />
                    <span asp-validation-for="SenderEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MessageBody"></label>
                    <textarea asp-for="MessageBody" class="form-control"></textarea>
                    <span asp-validation-for="MessageBody" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Send</button>
                </div>
            </form>
        </section>
    </div>
</div>